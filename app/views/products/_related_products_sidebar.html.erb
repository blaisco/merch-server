<% related_product_limit = 3 %>

<div class="sidebar-inner">
  <h4><%= (headline % link_to(has_products.name, has_products)).html_safe %></h4>
  <div class="other-items">
    <% rp = related_products(has_products, 3, exclude).each do |product| %>
      <%= link_to image_tag(product.images.first.data.url(:thumb), :alt => product.name), product %>
    <% end %>
    <% if rp.empty? %>
      <div>No related products available.</div>
    <% end %>
  </div>
</div>
