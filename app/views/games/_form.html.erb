<%= errors_for(@game) %>

<fieldset>
  <div class="clearfix">
    <%= form.label :name %>
    <div class="input">
      <%= form.text_field :name %>
    </div>
  </div>

  <div class="clearfix">
  <%= form.label :aliases %>
  <div class="input">
    <%= form.text_field :aliases %>
    </div>
  </div>

  <div class="clearfix">
  <%= form.label :release_date %>
  <div class="input">
    <%= form.text_field :release_date %>
    </div>
  </div>
  
  <div class="actions">
    <%= form.submit @game.persisted? ? "Update Game" : "Create Game", :class => "primary btn" %>
  </div>
</fieldset>


