<fieldset>
  <div class="clearfix">
    <%= form.label :name %>
    <div class="input">
      <%= form.text_field :name %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= form.label :slug %>
    <div class="input">
      <%= form.text_field :slug %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= form.label :url %>
    <div class="input">
      <span class="uneditable-input"><%= @merchant.url %></span>
    </div>
  </div>
  
  <div class="actions">
    <%= form.submit @merchant.persisted? ? "Update Merchant" : "Create Merchant", :class => "success btn" %>
  </div>
</fieldset>
