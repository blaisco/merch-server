<div class="page-header">
  <h1><%= title "Merchants" %></h1>
</div>

<table class="condensed-table zebra-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>URL</th>
    </tr>
  </thead>
  <tbody>
  <% @merchants.each do |merchant| %>
    <tr>
      <td><%= link_to merchant.name, merchant %> <%= link_to "(edit)", edit_merchant_path(merchant) if current_user %></td>
      <td><%= merchant.slug %></td>
      <td><%= link_to merchant.url, merchant.url %></td>
    </tr>
  <% end %>
  </tbody>
</table>
